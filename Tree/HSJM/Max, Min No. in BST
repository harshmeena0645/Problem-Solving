class Node:
    def __init__(self, data):
        self.data = data
        self.left = None
        self.right = None

def find_min(root):
    if root is None:
        return None
    current = root
    while current.left:
        current = current.left
    return current.data

def find_max(root):
    if root is None:
        return None
    current = root
    while current.right:
        current = current.right
    return current.data


root = Node(10)
root.left = Node(4)
root.right = Node(12)
root.left.left = Node(1)
root.left.right = Node(6)
root.right.left = Node(11)
root.right.right = Node(15)

print("Min No.:", find_min(root))
print("Max No.:", find_max(root))
